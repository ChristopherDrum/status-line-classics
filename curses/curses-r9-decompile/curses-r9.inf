[ RunRoutines n s v ;	
    noun = n;
    second = s;
    action = v;
    if (metaverb == true) {
        ! no code
    } else {
        if (location ~= nothing) {
            n = location.before;
            if (n ~= invalidObj65535 && n() ~= 0) {
                rtrue;
            }
        }
        if (noun ~= nothing) {
            n = noun.before;
            if (n ~= invalidObj65535 && n() ~= 0) {
                rtrue;
            }
        }
    }
    s = verb_routine_array-->v;
    s();	! not popped
    @pop;
    rtrue;
];

[ AfterRoutines i o ;	
