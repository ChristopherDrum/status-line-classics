[ ResetTimer obj i ;	
    i = obj.number;
    if (i > turns) {
        rfalse;
    }
    if (i == 0) {
        rfalse;
    }
    obj.number = 0;
    rtrue;
];

[ DecrementTimer o i ;	
    i = o.number;
    if (i == 0) {
        rfalse;
    }
    --i;
    o.number = i;
    if (i > 0) {
        rfalse;
    }
    rtrue;
];

[ StartTimer o i ;	
    i = turns + i;
    o.number = i;
    rtrue;
];

[ CountDown o i ;	
    i = o.number - turns;
    return i;
];

